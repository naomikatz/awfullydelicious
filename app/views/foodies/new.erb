<h1>Sign up</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |err| %>
    <%= err %>
    <% end %>
<% end %>

<h4><%= flash[:notice] %></h4>

<%= form_for @foodie do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.submit %>
<% end %>
