<% if flash[:errors] %>
  <% flash[:errors].each do |err| %>
    <%= err %>
    <% end %>
<% end %>

<h4><%= flash[:notice] %></h4>



<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2> Sign Up </h2>
            <%= form_for @foodie do |f| %>
            <div class="panel-body">
              <%= f.text_field :username, required: true, label: false, placeholder: 'Username', input_html: { class: 'input-lg' }  %>
              <%= f.text_field :password, required: true, label: false, placeholder: 'Password', input_html: { class: 'input-lg' }  %>
              <%= f.submit "Sign up", class: 'btn-lg btn-info btn-block' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
